package databases;

import java.io.FileInputStream;
import java.io.IOException;
import java.io.ObjectInputStream;

public class UserDB {

    public void saveUser(User user) {
        try (ObjectOutputStream out = new ObjectOutputStream(new FileOutputStream("user.ser"))) {
            out.writeObject(user); // Serialize the user object
            System.out.println("User saved successfully!");
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    public User loadUser() {
        try (ObjectInputStream in = new ObjectInputStream(new FileInputStream("user.ser"))) {
            return (User) in.readObject(); // Deserialize the user object
        } catch (IOException | ClassNotFoundException e) {
            e.printStackTrace();
        }
        return null;
    }

    public static void main(String[] args) {
        UserStorage storage = new UserStorage();
        User user = new User("john_doe", "password123", "john@example.com");

        storage.saveUser(user); // Save the user object to a file

        // Load the user object from the file
        User loadedUser = storage.loadUser();
        if (loadedUser != null) {
            System.out.println("Loaded user: " + loadedUser);
        }
    }
}
